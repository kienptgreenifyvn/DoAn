<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="http://localhost:8008/backend/login/fonts/icomoon/style.css"
    />

    <link
      rel="stylesheet"
      href="http://localhost:8008/backend/login/css/owl.carousel.min.css"
    />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="http://localhost:8008/backend/login/css/bootstrap.min.css"
    />

    <!-- Style -->
    <link
      rel="stylesheet"
      href="http://localhost:8008/backend/login/css/style.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/notify/0.4.2/styles/metro/notify-metro.css"
    />
    <title>Login #8</title>
  </head>
  <body>
    <div class="content">
      <div class="container">
        <div class="row">
          <div class="col-md-6 order-md-2">
            <img
              src="http://localhost:8008/backend/login/images/abc.svg"
              alt="Image"
              class="img-fluid"
            />
          </div>
          <div class="col-md-6 contents">
            <div class="row justify-content-center">
              <div class="col-md-8">
                <div class="mb-4">
                  <h3><strong>Đăng Nhập</strong></h3>
                </div>

                <div class="form-group first">
                  <label for="id">Tên tài khoản</label>
                  <input type="text" class="form-control" name="id" id="id" />
                </div>
                <div class="form-group last mb-4">
                  <label for="password">Mật khẩu</label>
                  <input
                    type="password"
                    class="form-control"
                    name="password"
                    id="password"
                  />
                </div>

                <div class="d-flex mb-5 align-items-center">
                  <label class="control control--checkbox mb-0"
                    ><span class="caption">Nhớ mật khẩu</span>
                    <input type="checkbox" checked="checked" />
                    <div
                      class="control__indicator"
                      style="background-color: #4e73df"
                    ></div>
                  </label>
                  <span class="ml-auto"
                    ><a href="#" class="forgot-pass">Quên mật khẩu</a></span
                  >
                </div>

                <input
                  type="submit"
                  id="dangnhap"
                  style="background-color: #4e73df; border-color: #4e73df"
                  class="btn text-white btn-block btn-primary"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="http://localhost:8008/backend/login/js/jquery-3.3.1.min.js"></script>
    <script src="http://localhost:8008/backend/login/js/popper.min.js"></script>
    <script src="http://localhost:8008/backend/login/js/bootstrap.min.js"></script>
    <script src="http://localhost:8008/backend/login/js/main.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/notify/0.4.2/notify.min.js"></script>

    <script type="text/javascript">
      function notify(name) {
        $.notify(name, "error");
      }
    </script>
    <script>
      $(document).ready(function () {
        $("#dangnhap").click(async function () {
          var data = {
            id: document.getElementById("id").value,
            password: document.getElementById("password").value,
          };
          console.log(data);
          var f = await fetch("http://localhost:8008/api/auth/signin", {
            method: "POST", // or 'PUT'
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify(data),
          })
            .then((response) => response.json())
            .then((data) => {
              if (data.uri) {
                window.location = data.uri;
              } else {
                notify(data.message);
                // setTimeout(() => {
                //   location.reload();
                // }, 3000);
              }
            });
        });
      });
    </script>
  </body>
</html>
