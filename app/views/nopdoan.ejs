    <h5 class="m-0 font-weight-bold " style="color: #858796;">Nộp đồ án</h5>
    <div class="row">
      <div class="col-2"></div>
      <div class="col-8">
        <form
          action="/sinhvien/up_nopdoan"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="exampleInputPassword1">Mã sinh viên</label>
              <input
                type="text"
                class="form-control"
                name="IDsinhvien"
                value="<%=sinhvien.IDsinhvien %>"
                readonly
              />
            </div>
            <div class="form-group col-md-6">
              <label for="exampleInputPassword1">Tên sinh viên</label>
              <input
                type="text"
                class="form-control"
                name="tensinhvien"
                value="<%=sinhvien.tensinhvien %>"
                readonly
              />
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="exampleInputPassword1">Giới tính</label>
              <input
                type="text"
                class="form-control"
                name="gioitinh"
                value="<%=sinhvien.gioitinh %>"
                readonly
              />
            </div>
            <div class="form-group col-md-6">
              <label for="exampleInputPassword1">Năm sinh</label>
              <input
                type="text"
                class="form-control"
                name="namsinh"
                value="<%=k %>"
                readonly
              />
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="exampleInputPassword1">Số điện thoại</label>
              <input
                type="tel"
                class="form-control"
                name="sodienthoai"
                value="<%=sinhvien.sodienthoai %>"
                readonly
              />
            </div>
            <div class="form-group col-md-6">
              <label for="exampleInputPassword1">Quê quán</label>
              <input
                type="tel"
                class="form-control"
                name="quequan"
                value="<%=sinhvien.quequan %>"
                readonly
              />
            </div>
          </div>
          <div class="form-row" style="padding-top: 20px">
            <div class="form-group col-md-4">
              <label for="exampleInputPassword1">Bậc đào tạo</label>
              <input
                type="text"
                class="form-control"
                name="bacdaotao"
                value="<%=sinhvien.bacdaotao %>"
                readonly
              />
            </div>
            <div class="form-group col-md-4">
              <label for="exampleInputPassword1">Hệ Đào tạo</label>
              <input
                type="text"
                class="form-control"
                name="hedaotao"
                value="<%=sinhvien.hedaotao %>"
                readonly
              />
            </div>
            <div class="form-group col-md-4">
              <label for="exampleInputPassword1">Khóa đào tạo</label>
              <input
                type="text"
                class="form-control"
                name="khoadaotao"
                value="<%=sinhvien.khoadaotao %>"
                readonly
              />
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="exampleInputPassword1">Lớp</label>
              <input
                type="hidden"
                class="form-control"
                name="IDlop"
                value="<%=ds_sinhvien.IDlop %>"
                readonly
              />
              <input
              type="text"
              class="form-control"
              name="tenlop"
              value="<%=ds_sinhvien.tenlop %>"
              readonly
            />
            </div>
            <div class="form-group col-md-6">
              <label for="exampleInputPassword1">Giảng viên hướng dẫn</label>
              <input
                type="hidden"
                class="form-control"
                name="IDgiangvien"
                value="<%=ds_sinhvien.IDgiangvien %>"
                readonly
              />
              <input
              type="text"
              class="form-control"
              name="tengiangvien"
              value="<%=ds_sinhvien.tengiangvien %>"
              readonly
            />
            </div>
          </div>

          <div class="form-group">
            <label for="exampleInputPassword1">Đề tài</label>
            <input
              type="hidden"
              class="form-control"
              name="IDdetai"
              value="<%=ds_sinhvien.IDdetai %>"
              readonly
            />
            <input
            type="text"
            class="form-control"
            name="tendetai"
            value="<%=ds_sinhvien.tendetai %>"
            readonly
          />
          </div>

          <div class="form-group">
            <label for="formFileMultiple" class="form-label"
              >Nộp đồ án tốt nghiệp</label
            >
            <input
              class="form-control"
              type="file"
              name="sourceCode"
              id="formFileMultiple"
              multiple
              required
            /><%=sinhvien.sourcecode %>
          </div>
          <div class="form-group">
            <input
              class="form-control"
              type="hidden"
              name="id"
              value="<%= sinhvien.id %>"
            />
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Nộp đồ án</button>
          </div>
        </form>
      </div>
      <div class="col-2"></div>
    </div>
