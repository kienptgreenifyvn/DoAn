                                <div class="form-row ">
                                    <div class="form-group col-md-6">
                                        <label for="exampleInputPassword1">Mã sinh viên</label>
                                        <input type="text" class="form-control" name="IDsinhvien" value="<%=ds_sinhvien.IDsinhvien %>" readonly>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="exampleInputPassword1">Tên sinh viên</label>
                                        <input type="text" class="form-control" name="tensinhvien" value="<%=ds_sinhvien.IDsinhvien %>">
                                    </div>
                                </div>
                                <div class="form-row ">
                                    <div class="form-group col-md-6">
                                        <label for="exampleInputPassword1">Năm sinh</label>
                                        <input type="text" class="form-control" name="namsinh" value="<%=ds_sinhvien.namsinh %>">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="exampleInputPassword1">Giới tính</label>
                                        <select class="custom-select" name="gioitinh">
                                            <option value="<%=ds_sinhvien.gioitinh %>"><%=ds_sinhvien.gioitinh %></option>
                                            <option value="Nam">Nam</option>
                                            <option value="Nữ">Nữ</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="exampleInputPassword1">Số điện thoại</label>
                                        <input type="tel" class="form-control" name="sodienthoai" value="<%=ds_sinhvien.sodienthoai %>">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="exampleInputPassword1">Điểm tích lũy</label>
                                        <input type="text" class="form-control" name="diemtichluy" value="<%=ds_sinhvien.diemtichluy %>">
                                    </div>
                                </div>
                               
                                    <div class="form-group ">
                                        <label for="exampleInputPassword1">Quê quán</label>
                                        <input type="text" class="form-control" name="quequan" value="<%=ds_sinhvien.quequan %>">
                                    </div>
                                
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Kỹ năng</label>
                                    <textarea  class="form-control" name="kynang" rows="4" cols="100"><%=ds_sinhvien.kynang %></textarea>
                                  </div>
            
                                <div class="form-row" style="padding-top: 20px;">
                                    <div class="form-group col-md-4">
                                        <label for="exampleInputPassword1">Bậc đào tạo</label>
                                        <select class="custom-select" name="bacdaotao">
                                            <option value="<%=ds_sinhvien.bacdaotao %>"><%=ds_sinhvien.bacdaotao %></option>
                                            <option value="Chính quy">Chính Quy</option>
                                            <option value="Tại chức">Tại chức</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="exampleInputPassword1">Hệ Đào tạo</label>
                                        <select class="custom-select" name="hedaotao">
                                            <option value="<%=ds_sinhvien.hedaotao %>"><%=ds_sinhvien.hedaotao %></option>
                                            <option value="Đại Học">Đại học</option>
                                            <option value="Cao đẳng">Cao đẳng</option>
                                            <option value="Trung cấp">Trung cấp</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="exampleInputPassword1">Khóa đào tạo</label>
                                        <input type="text" class="form-control" name="khoadaotao" value="<%=ds_sinhvien.khoadaotao %>">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="exampleInputPassword1">Chọn lớp</label>
                                        <select name="IDlop" class="form-control">
                                            <option value="<%= ds_sinhvien.IDlop %>">
                                                <%= ds_sinhvien.tenlop %>
                                            </option>
                                            <% chon_lop.rows.forEach(function(chon_lop){ %>
                                                <option value="<%= chon_lop.IDlop %>">
                                                    <%= chon_lop.tenlop %>
                                                </option>
                                                <% }); %>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="exampleInputPassword1">Chọn chuyên ngành</label>
                                        <select name="IDdonvi" class="form-control">
                                            <option value="<%= ds_sinhvien.IDdonvi %>">
                                                <%= ds_sinhvien.tendonvi %>
                                            </option>
                                            <% chon_donvi.rows.forEach(function(chon_donvi){ %>
                                                <option value="<%= chon_donvi.IDdonvi %>">
                                                    <%= chon_donvi.tendonvi %>
                                                </option>
                                                <% }); %>
                                        </select>
                                    </div>
                                </div>
                              
                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                    </div>
                                    <div class="form-group col-md-4">
                                    </div>
                                    <div class="form-group col-md-4">
                                        <button type="submit" class="btn btn-primary">Thêm
                                            mới</button>&nbsp;&nbsp;&nbsp;&nbsp;
                                        <a href="/quanly/sinhvien" class="btn btn-primary">Trở lại</a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </form>

            <div class="modal fade" id="detailcate<%=ds_sinhvien.IDsinhvien %>" tabindex="-1" role="dialog"
                aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content" style="width: 800px">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Chi tiết sinh viên</h5>
                            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <table class="table table-bordered" >
                                <tbody>
                                    <tr>
                                        <th>ID sinh viên</th>
                                        <td>
                                            <%= ds_sinhvien.IDsinhvien %>
                                        </td>

                                    </tr>
                                    <tr>
                                        <th>Tên sinh viên</th>
                                        <td>
                                            <%= ds_sinhvien.tensinhvien %>
                                        </td>

                                    </tr>
                                    <tr>
                                        <th>Giới tính </th>
                                        <td>
                                            <%= ds_sinhvien.gioitinh %>
                                        </td>

                                    </tr>
                                    <tr>
                                        <th>Năm sinh </th>
                                        <td>
                                            <%= ds_sinhvien.namsinh %>
                                        </td>

                                    </tr>
                                    <tr>
                                        <th>Email</th>
                                        <td>
                                            <%= ds_sinhvien.email %>
                                        </td>

                                    </tr>
                                    <tr>
                                        <th>Số điện thoại </th>
                                        <td>
                                            <%= ds_sinhvien.sodienthoai %>
                                        </td>

                                    </tr>
                                    <tr>
                                        <th>Quê quán </th>
                                        <td>
                                            <%= ds_sinhvien.quequan %>
                                        </td>

                                    </tr>
                                    <tr>
                                        <th>Source code </th>
                                        <td>
                                           <%= ds_sinhvien.sourcecode %>
                                        </td>

                                    </tr>
                                    <tr>
                                        <th>Điểm tích lũy</th>
                                        <td>
                                            <%= ds_sinhvien.diemtichluy %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Kỹ năng</th>
                                        <td>
                                            <%= ds_sinhvien.kynang %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Bậc đào tạo </th>
                                        <td>
                                            <%= ds_sinhvien.bacdaotao %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Hệ đào tạo</th>
                                        <td>
                                            <%= ds_sinhvien.hedaotao%>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Khóa đào tạo</th>
                                        <td>
                                            <%= ds_sinhvien.khoadaotao %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Lớp</th>
                                        <td>
                                            <%= ds_sinhvien.tenlop %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Chuyên ngành</th>
                                        <td>
                                            <%= ds_sinhvien.tendonvi %>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>

            <% }); %>
                <form action="/quanly/sinhvien/them_sinhvien" method="POST" enctype="multipart/form-data">
                    <div class="modal fade" id="addcate" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
